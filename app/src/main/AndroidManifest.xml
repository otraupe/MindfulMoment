<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".MindfulApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_heart_gradient_centered"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_heart_gradient_centered_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindfulMoment"
        android:intentMatchingFlags="enforceIntentFilter"
        tools:targetApi="36"> <!--suppress warning for intentMatchintFlags attribute-->
        <!--the following allows restricted resizing e.g. via the nosensor setting below;
        from Android 17 on this will be ineffective/ignored!-->
        <property android:name="android.window.PROPERTY_COMPAT_ALLOW_RESTRICTED_RESIZABILITY" android:value="true" />
        <activity
            android:name=".ui.view.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name=".services.NotificationAlarmReceiver"
            android:exported="false" />
        <receiver
            android:name=".services.BootCompleteReceiver"
            android:exported="true">
            <intent-filter>
                <!-- This and exported=true are crucial for the receiver to receive any external event -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

<!--        ============================================================-->
<!--        == Add this block to disable WorkManager's default auto-initializer.-->
<!--        == This forces WorkManager to use the configuration provided by your-->
<!--        == Application class.-->
<!--        ============================================================-->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="remove" />

    </application>

</manifest>